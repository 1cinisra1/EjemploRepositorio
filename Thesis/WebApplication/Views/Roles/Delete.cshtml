@model WebApplication.Models.roles

@{
    ViewBag.Home = "Home";
    ViewBag.Title = "Eliminar Rol";
    ViewBag.Subtitle = "Compuservi";
    ViewBag.Subtitle1 = "Rol de Usuaurio";
}
@if (ViewBag.Verificar is Int32)
{
<div class="register-box">
    <div class="register-box-body">
        <h3 style="text-align:center">ELIMINAR ROL</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Descripción</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>
}

