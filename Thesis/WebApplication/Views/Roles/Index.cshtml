@model IEnumerable<WebApplication.Models.roles>

@{
    ViewBag.Title = "Index";
}

@section Menu {
    @Scripts.Render("~/Scripts/Tables/Data/menu")
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")


<div class="row">
    <div class="col-md-12 ">
        <div class="box" style="margin-left:110px">

            <div class="box-body">
                <div class="form-horizontal">

                    <table id="example1" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    <label>Descripcion</label>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.idRoles }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.idRoles }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.idRoles })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
}
