@model WebApplication.Models.roles

@{
    ViewBag.Title = "Details";
}

<div class="register-box">
    <div class="register-box-body">
        <h3 style="text-align:center">DETALLE USUARO</h3>
       
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Descripción</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

        </dl>

        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.idRoles }, new { @class = "btn btn-success" })
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
        </p>
    </div>
</div>

