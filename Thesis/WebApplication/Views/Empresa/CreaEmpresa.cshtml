@model WebApplication.Models.EmpresaAccount

@{
    ViewBag.Title = "Registrar Empresa";
}

@section Menu{
    @Scripts.Render("~/Scripts/Forms/General/menu")
    }

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="col-md-6">
        <div class="box box-info"> 
            <div class="box-header with-border">
                <h3 class="box-title">Datos de Empresa</h3>
            </div>
            <form class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="box-body">
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.codigo, new { @class = "control-label col-md-2" })*@
                        <label for="inputEmail3" class="col-sm-2 control-label">Codigo</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" id="inputCodigo" placeholder="Codigo">
                            @*@Html.EditorFor(model => model.codigo)
                            @Html.ValidationMessageFor(model => model.codigo)*@
                        </div>
                    </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="inputNombre" placeholder="Ej. Pedro">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Direccion</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="inputDireccion" placeholder="Ej. Cdla. Alborada Mz 1">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Ciudad</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="inputCiudad" placeholder="Ej. Guayaquil">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Telefono</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="inputTelefono" placeholder="Ej. 042222222">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">RUC</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="inputRuc" placeholder="Ej. 0999999999">
                    </div>
                </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-default">Guardar</button>  
                 </div>
            </form>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
