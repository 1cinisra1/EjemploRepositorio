@model WebApplication.Models.cli_empresa

@{
    ViewBag.Title = "Editar Informacion";
}

@section Menu{
    @Scripts.Render("~/Scripts/Forms/General/menu")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    string code = Request.QueryString["cod"];
    string val = Request["cod"];

    <div class="col-md-6">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Datos de Empresa</h3>
            </div>
            <form class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(Model => Model.idCli_Empresa)
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cli_Nombre)
                            @Html.ValidationMessageFor(model => model.Cli_Nombre)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Ruc</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cli_Ruc)
                            @Html.ValidationMessageFor(model => model.Cli_Ruc)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Direccion</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cli_Direccion)
                            @Html.ValidationMessageFor(model => model.Cli_Direccion)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Telefono</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cli_Tel)
                            @Html.ValidationMessageFor(model => model.Cli_Tel)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Ciudad</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cli_Ciudad)
                            @Html.ValidationMessageFor(model => model.Cli_Ciudad)
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-default">Guardar</button>
                </div>
            </form>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
