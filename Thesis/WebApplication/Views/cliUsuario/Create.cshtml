@model WebApplication.Models.cli_usuario

@{
    ViewBag.Title = "Create";
}

<div class="register-box">
    <div class="register-box-body">
        <p class="login-box-msg">Registrar una nueva Empresa</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Nuevo Usuario</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_nombre)
                        @Html.ValidationMessageFor(model => model.Cli_nombre)
                    </div>
                </div>

                @*<div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Departamento</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Departamento)
                        @Html.ValidationMessageFor(model => model.Cli_Departamento)
                    </div>
                </div>*@

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Departamento</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Cli_Departamento_idCli_Departamento", String.Empty)
                        @Html.ValidationMessageFor(model => model.Cli_Departamento_idCli_Departamento)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Empresa</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Cli_Empresa_idCli_Empresa", String.Empty)
                        @Html.ValidationMessageFor(model => model.Cli_Empresa_idCli_Empresa)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Equipo</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Equipo_idCli_Equipo)
                        @Html.ValidationMessageFor(model => model.Cli_Equipo_idCli_Equipo)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Correo</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Correo)
                        @Html.ValidationMessageFor(model => model.Cli_Correo)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />|
                        @Html.ActionLink(" Departamento","Create","cliDepartamento")|
                        @Html.ActionLink(" Equipo", "Create", "cliEquipo")|
                        @Html.ActionLink("Volver", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>
