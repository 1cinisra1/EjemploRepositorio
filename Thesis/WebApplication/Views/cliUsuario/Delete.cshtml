@model WebApplication.Models.cli_usuario

@{
    ViewBag.Title = "Delete";
}

<div class="register-box">
    <div class="register-box-body">
        <p class="login-box-msg">Desea Eliminar Este Usuario?</p>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_nombre)
            </dd>

            @*<dt>
                    @Html.DisplayNameFor(model => model.Cli_Departamento)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cli_Departamento)
                </dd>*@

            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Equipo</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_Equipo_idCli_Equipo)
            </dd>

            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Correo</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_Correo)
            </dd>

            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Empresa</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.cli_cliente.Cli_Nombre)
            </dd>

            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Departamento</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.cli_departamento1.Cli_Descripcion)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Volver", "Index")
            </div>
        }
    </div>
</div>

