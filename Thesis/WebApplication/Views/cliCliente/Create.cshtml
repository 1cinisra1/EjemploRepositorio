@model WebApplication.Models.cli_cliente

@{
    ViewBag.Title = "Create";
}

<div class="register-box">
    <div class="register-box-body">
        <p class="login-box-msg">Registrar una nueva Empresa</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Agregar Cliente</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Nombre)
                        @Html.ValidationMessageFor(model => model.Cli_Nombre)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">RUC/Cedula</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Ruc)
                        @Html.ValidationMessageFor(model => model.Cli_Ruc)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Direccion</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Direccion)
                        @Html.ValidationMessageFor(model => model.Cli_Direccion)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Telefono</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Tel)
                        @Html.ValidationMessageFor(model => model.Cli_Tel)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Ciudad</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Ciudad)
                        @Html.ValidationMessageFor(model => model.Cli_Ciudad)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Razon Social</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_RSocial)
                        @Html.ValidationMessageFor(model => model.Cli_RSocial)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nombre Contacto</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_NombContacto)
                        @Html.ValidationMessageFor(model => model.Cli_NombContacto)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Volver", "Index")
</div>
