@model WebApplication.Models.cli_tipoequipo

@{
    ViewBag.Title = "Edit";
}
@if (ViewBag.Verificar is Int32)
{
<div class="register-box">
    <div class="register-box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3 style="text-align:center">EDITAR TIPO EQUIPO</h3>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.idCli_TipoEquipo)

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Descripción</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cli_Descripcion, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Cli_Descripcion)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" value="Save" class="btn btn-success">Aceptar</button>
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}

<style type="text/css">
    .form-control-rounded {
        border-radius: 16px;
    }
</style>