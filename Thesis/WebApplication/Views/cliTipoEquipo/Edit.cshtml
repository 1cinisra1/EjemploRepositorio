@model WebApplication.Models.cli_tipoequipo

@{
    ViewBag.Home = "Home";
    ViewBag.Title = "Editar Descripción";
    ViewBag.Subtitle = "Equipos";
    ViewBag.Subtitle1 = "Tipo de Equipos";
}
@if (ViewBag.Verificar is Int32)
{
<div class="register-box">
    <div class="register-box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3 style="text-align:center">EDITAR TIPO EQUIPO</h3>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.idCli_TipoEquipo)

                <div class="form-group">
                    <label for="inputEmail3" class="required col-sm-3 control-label">Descripción</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Cli_Descripcion, new { htmlAttributes = new { @class = "form-control form-control-rounded", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Cli_Descripcion, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-8">
                        <button type="submit" value="Save" class="btn btn-success">Aceptar</button>
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}

<style type="text/css">
    .form-control-rounded {
        border-radius: 16px;
    }
    .required::after {
        content: "*";
        font-weight: normal;
        color: red;
        font-size: large;
    }
</style>