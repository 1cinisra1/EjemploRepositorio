@model WebApplication.Models.cli_tipoequipo

@{
    ViewBag.Title = "Create";
}
@if (ViewBag.Verificar is Int32)
{
<div class="register-box">
    <div class="register-box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>EQUIPOS</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label for="inputEmail3" class="required col-sm-3 control-label">Descripción</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Cli_Descripcion, new { htmlAttributes = new { @class = "form-control form-control-rounded", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Cli_Descripcion, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-8">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}
<style type="text/css">
    .form-control-rounded {
        border-radius: 16px;
    }
    .required::after {
        content: "*";
        font-weight: normal;
        color: red;
        font-size: large;
    }
</style>

