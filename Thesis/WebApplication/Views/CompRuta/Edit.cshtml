@model WebApplication.Models.comp_ruta

@{
    ViewBag.Title = "Edit";
}

<div class="register-box">
    <div class="register-box-body">
        

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3 style="text-align:center">EDITAR RUTA</h3>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.idComp_Bitacora)

                <div class="form-group">
                    <label for="inputEmail3" class="required col-sm-2 control-label">fecha</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comp_Fecha, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Comp_Fecha)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Visita No.</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comp_NumeroVisitaMes, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Comp_NumeroVisitaMes)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="required col-sm-2 control-label">Técnico Asignado</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Com_Usuarios_idCom_Usuarios", null, new { @class = "form-control form-control-rounded" })
                        @Html.ValidationMessageFor(model => model.Com_Usuarios_idCom_Usuarios)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Rol</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Com_Usuarios_Roles_idRoles", null, new { @class = "form-control form-control-rounded" })
                        @Html.ValidationMessageFor(model => model.Com_Usuarios_Roles_idRoles)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="required col-sm-2 control-label">Empresa a Visitar</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Cli_Empresa_idCli_Empresa", null, new { @class = "form-control form-control-rounded" })
                        @Html.ValidationMessageFor(model => model.Cli_Empresa_idCli_Empresa)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Tiempo Estimado</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comp_TiempoDur, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Comp_TiempoDur)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Comentario</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comp_Comentario, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Comp_Comentario)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" value="Save" class="btn btn-success">Aceptar</button>
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style type="text/css">
    .form-control-rounded {
        border-radius: 16px;
    }

    .required::after {
        content: "*";
        font-weight: normal;
        color: red;
        font-size: large;
    }
</style>
