@model WebApplication.Models.cli_equipo

@{
    ViewBag.Title = "Create";
}
@if (ViewBag.Verificar is Int32)
{
<div class="register-box" >
    <div class="register-box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>EQUIPOS</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label for="inputEmail3" class="required col-sm-3 control-label">Marca</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Cli_Marca, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Cli_Marca, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="required col-sm-3 control-label">Modelo</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Cli_Modelo, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Cli_Modelo, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Disco Duro</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Cli_DiscoDuro, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Cli_DiscoDuro)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Memoria RAM</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Cli_Ram, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Cli_Ram)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Procesador</label>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Cli_Procesador, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                        @Html.ValidationMessageFor(model => model.Cli_Procesador)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Tipo de Equipo</label>
                    <div class="col-md-8">
                        @Html.DropDownList("Cli_TipoEquipo_idCli_TipoEquipo", null, new { @class = "form-control form-control-rounded" })
                        @Html.ValidationMessageFor(model => model.Cli_TipoEquipo_idCli_TipoEquipo)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        @Html.ActionLink("Nuevo Tipo", "create", "cliTipoEquipo", null, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
}
<style type="text/css">
    .form-control-rounded {
        border-radius: 16px;
    }

    .required::after {
        content: "*";
        font-weight: normal;
        color: red;
        font-size: large;
    }
</style>

