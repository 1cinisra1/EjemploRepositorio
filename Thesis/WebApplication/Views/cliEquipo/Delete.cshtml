@model WebApplication.Models.cli_equipo

@{
    ViewBag.Title = "Delete";
}

<div class="register-box">
    <div class="register-box-body">


        <h3 style="text-align:center">ELIMINAR EQUIPO</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Marca</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_Marca)
            </dd>

            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Modelo</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_Modelo)
            </dd>

            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Disco Duro</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_DiscoDuro)
            </dd>

            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Memoria RAM</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_Ram)
            </dd>

            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Procesador</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_Procesador)
            </dd>
            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Tipo Equipo</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.cli_tipoequipo1.Cli_Descripcion)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-danger" />
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }

    </div>
</div>