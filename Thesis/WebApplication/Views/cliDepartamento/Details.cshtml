@model WebApplication.Models.cli_departamento

@{
    ViewBag.Title = "Detalles del Departamento";
    ViewBag.Subtitle = "Empresas";
    ViewBag.Subtitle1 = "Departamento";
    ViewBag.Home = "Home";
}


@if (ViewBag.Verificar is Int32)
{
<div class="register-box">
    <div class="register-box-body">
        <h3 style="text-align:center">DETALLE DEPARTAMENTO</h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label for="inputEmail3" class="col-sm-2 control-label">Descripción</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cli_Descripcion)
            </dd>

        </dl>

        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.idCli_Departamento }, new { @class = "btn btn-success" })
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
        </p>
    </div>
</div>
}


