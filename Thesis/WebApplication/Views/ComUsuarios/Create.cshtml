@model WebApplication.Models.com_usuarios

@{
    ViewBag.Title = "Create";
}

<div class="register-box">
    <div class="register-box-body">
        <p class="login-box-msg">Usuarios</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Nuevo</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Com_Nombre)
                        @Html.ValidationMessageFor(model => model.Com_Nombre)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Rol</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Roles_idRoles", String.Empty)
                        @Html.ValidationMessageFor(model => model.Roles_idRoles)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Apellido</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Com_Apellido)
                        @Html.ValidationMessageFor(model => model.Com_Apellido)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Correo</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Com_Correo)
                        @Html.ValidationMessageFor(model => model.Com_Correo)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Direccion</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Com_Direccion)
                        @Html.ValidationMessageFor(model => model.Com_Direccion)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Cedula</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Com_Cedula)
                        @Html.ValidationMessageFor(model => model.Com_Cedula)
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Telefono</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Com_Telefono)
                        @Html.ValidationMessageFor(model => model.Com_Telefono)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-default" />|
                        @Html.ActionLink("Volver","Index")|
                        @Html.ActionLink("Agregar Rol", "Create","Roles")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

