@model WebApplication.Models.com_usuarios

@{
    ViewBag.Title = "Create";
}

<div class="register-box">
    <div class="register-box-body">
     
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
               
                    <h3 style="text-align:center">USUARIO</h3>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <label for="inputEmail3" class=" required col-sm-2 control-label">Nombre</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Com_Nombre, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                            @Html.ValidationMessageFor(model => model.Com_Nombre)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="required col-sm-2 control-label">Apellido</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Com_Apellido, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                            @Html.ValidationMessageFor(model => model.Com_Apellido)
                        </div>
                    </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Rol</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Roles_idRoles", null, new { @class = "form-control form-control-rounded" })
                        @Html.ValidationMessageFor(model => model.Roles_idRoles)
                    </div>
                </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="required col-sm-2 control-label">Correo</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Com_Correo, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                            @Html.ValidationMessageFor(model => model.Com_Correo)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Dirección</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Com_Direccion, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                            @Html.ValidationMessageFor(model => model.Com_Direccion)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="required col-sm-2 control-label">Cédula</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Com_Cedula, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                            @Html.ValidationMessageFor(model => model.Com_Cedula)
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail3" class="required col-sm-2 control-label">Teléfono</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Com_Telefono, new { htmlAttributes = new { @class = "form-control form-control-rounded" } })
                            @Html.ValidationMessageFor(model => model.Com_Telefono)
                        </div>
                    </div>


                <div class="form-group">
                    <label for="inputEmail3" class="required col-sm-2 control-label">Clave</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Com_Clave, new { htmlAttributes = new { @class = "form-control form-control-rounded", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Com_Clave)
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success">Crear</button>
                            @Html.ActionLink("Rol", "Create","Roles",null, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
                             
                    </div>
                </div>
           
       
    </div>
        }
    </div>
</div>
    
                    
<style type="text/css">
    .form-control-rounded {
        border-radius: 16px;
    }
    .required::after {
        content: "*";
        font-weight: normal;
        color: red;
        font-size: large;
    }
</style>

