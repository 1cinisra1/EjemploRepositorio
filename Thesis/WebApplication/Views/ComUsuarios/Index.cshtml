@model IEnumerable<WebApplication.Models.com_usuarios>

@{
    ViewBag.Home = "Home";
    ViewBag.Title = "Lista de Usuarios";
    ViewBag.Subtitle = "Compuservi";
}

@section Menu {
    @Scripts.Render("~/Scripts/Tables/Data/menu")
}

@Styles.Render("~/AdminLTE/plugins/datatables/css")

@if (ViewBag.Verificar is Int32)
{
<div class="row">
    <div class="col-ms-12">
        <div class="box">
            <div class="table-responsive">
                <div class="box-body">
                    <div class="form-horizontal">
                        <h4>@Html.ActionLink("AGREGAR", "create", "create", new { @class = "btn btn-success" })</h4>
                        <hr />
                        <table id="example1" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        <label>Nombre</label>
                                    </th>
                                    <th>
                                        <label>Apellido</label>
                                    </th>
                                    <th>
                                        <label>Correo</label>
                                    </th>
                                    <th>
                                        <label>Dirección</label>
                                    </th>
                                    <th>
                                        <label>Cédula</label>
                                    </th>
                                    <th>
                                        <label>Teléfono</label>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Com_Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Com_Apellido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Com_Correo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Com_Direccion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Com_Cedula)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Com_Telefono)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.idCom_Usuarios, id1=item.Roles_idRoles }, new { @class = "btn btn-success" })
                                            @Html.ActionLink("Detales", "Details", new { id = item.idCom_Usuarios, id1 = item.Roles_idRoles }, new { @class = "btn btn-primary" }) 
                                            @Html.ActionLink("Eliminar", "Delete", new { id = item.idCom_Usuarios, id1 = item.Roles_idRoles }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Tables/Data")
}
